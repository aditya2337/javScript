<div class="col-xs-10">
  <!-- Tab panes -->
  <div class="tab-content">
    <div class="tab-pane active" id="home">
      <h4><span class ="fa fa-tasks"></span> Todo List</h4>
      <div class="col-sm-12">
        <form method="post">
          <button class="btn btn-warning col-sm-2" type="button">all done</button>
        </form>
        <form method="post">
          <div class="form-group col-sm-8">
            <input id = 'todo-name' class = "form-control" name="name" placeholder="Add a new task" type="text">
          </div>
          <button class="btn btn-primary col-sm-2" type="button" onclick="saveTodo()">add</button>
        </form>
      </div>
      <% if( tasks.length === 0) { %>
      No Items!
      <% } else { %>
      <div class="col-sm-12">
        <ol class="list-group">
          <% tasks.forEach(function(task) { %>
          <li class="list-group-item">
            <%= task.activity.name %> (Created at: <%= task.activity.createTime.toDateString(); %>)
            <button id="delTodo" type = "button" class = "btn btn-primary badge" onclick="delTodo('<%= task._id %>')">
              <span class="fa fa-times"></span>
            </button>
            <input type="hidden" value="true" name="completed" id="completed">
            <button id="delTodo" type = "button" class = "btn btn-primary badge" onclick="markCompleted('<%= task._id %>')">
              <span class="fa fa-check"></span>
            </button>
          </li>
          <% }); %>
        </ol>
      </div>
      <% } %>
    </div>
    <div class="tab-pane" id="profile">Profile Tab.</div>
    <div class="tab-pane" id="messages">Messages Tab.</div>
    <div class="tab-pane" id="settings">Settings Tab.</div>
  </div>
</div>
