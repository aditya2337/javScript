
<!-- INFORMATION -->
<div class="col-sm-6 tab-pane fade in active">
  <div >
    <h3><span class ="fa fa-user"></span> User</h3>
    
      <!-- show any messages that come with the authentication -->
      <% include partials/messages %>

    <form  method="POST">

      <div class="form-group">
        <input type="hidden" class="form-control" name="_method" value= "PUT">
      </div>

      <div class="form-group">
        <label>First Name</label>
        <input type="text" id="fname" class="form-control" name="fname" value= "<%= user.local.fname %>">
      </div>

      <div class="form-group">
        <label>Last Name</label>
        <input type="text" id="lname" class="form-control" name="lname" value="<%= user.local.lname %>">
      </div>

      <div class="form-group">
        <label>Email</label>
        <input type="text" id="email" class="form-control" name="email" value="<%= user.local.email %>">
      </div>
      <button type="button" class="btn btn-warning btn-lg" onclick = "update('<%= user._id %>')">Update</button>
      <hr>
    </form>
  </div>
</div>

