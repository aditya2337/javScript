<div class="container">
	<div class="col-sm-6 col-sm-offset-3">
		<h1><span class="fa fa-sign-in"></span> Signup</h1>

		<!-- show any messages that come with the authentication -->
		<% include partials/messages %>

		<!-- SIGNUP FORM -->
		<form  method="POST">

			<div class="form-group">
				<label>First Name</label>
				<input type="text" id="fname" class="form-control" name="fname">
			</div>

			<div class="form-group">
				<label>Last Name</label>
				<input type="text" id="lname" class="form-control" name="lname">
			</div>

			<div class="form-group">
				<label>Email</label>
				<input type="text" id="email" class="form-control" name="email">
			</div>

			<div class="form-group">
				<label>Password</label>
				<input type="password" id="password" class="form-control" name="password">
			</div>

			<div class="form-group">
				<label>Confirm password</label>
				<input type="password" id="cpassword" class="form-control" name="cpassword">
			</div>

			<div class="form-group">
			<label>Captcha</label><br>
				<img id="captchaRefresh" data-url="/captcha" alt="captcha" src="/captcha" >
				<button type="button" class="fa fa-refresh btn btn-default" title="click to refresh" aria-hidden="true" onclick = "refresh()"></button>
			</div>

			<div class="form-group">
				<input type="text" id="captcha" class="form-control" placeholder="input captcha" name="captcha">
			</div>

			<button type="button" class="btn btn-warning btn-lg" onclick="signUp()">Signup</button>

			<hr>

			<p>Already have an account? <a href="#" onclick="getLoginForm()">Login</a></p>
			<p>Or go <a href="#" onclick="gethome()">home</a>.</p>
		</form>
	</div>
</div>
<script type="text/javascript" src = "js/script.js"></script>
